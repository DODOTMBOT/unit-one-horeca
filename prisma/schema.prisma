generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ПЕРЕЧИСЛЕНИЯ (ENUMS) ---

enum UserRole {
  OWNER   // Главный администратор всей платформы
  ADMIN   // Системный администратор
  PARTNER // Владелец кафе (бизнеса)
  MANAGER // Управляющий (назначается партнером)
  USER    // Линейный сотрудник
}

enum OrderStatus {
  NEW
  PROCESSING
  COMPLETED
  CANCELLED
}

// --- СИСТЕМНЫЕ МОДЕЛИ ---

model User {
  id        String   @id @default(cuid())
  login     String?  @unique
  password  String?
  name      String?
  surname   String?
  email     String?  @unique
  role      UserRole @default(USER)

  // --- СВЯЗИ ДЛЯ ПАРТНЕРА ---
  ownedEstablishments Establishment[] @relation("OwnerToEstablishment")

  // --- СВЯЗИ ДЛЯ СОТРУДНИКА (МНОГИЕ-КО-МНОГИМ) ---
  establishments Establishment[] @relation("EstablishmentEmployees")

  // Иерархия партнеров и персонала
  partnerId     String?
  parentPartner User?   @relation("PartnerToStaff", fields: [partnerId], references: [id])
  staffMembers  User[]  @relation("PartnerToStaff")

  // --- ХАССП: Журналы ---
  healthLogs    HealthLog[]      @relation("EmployeeHealthEntries")
  performedLogs HealthLog[]      @relation("ManagerHealthChecks")
  tempLogs      TemperatureLog[]

  // --- СИСТЕМНЫЕ ПОЛЯ ---
  subscriptionStatus  String?           @default("none")
  subscriptionPlanId  String?
  subscriptionPlan    SubscriptionPlan? @relation(fields: [subscriptionPlanId], references: [id])
  subscriptionExpires DateTime?
  paymentMethodId     String?

  emailVerified     DateTime?
  image             String?
  phone             String?
  restaurantName    String?
  restaurantAddress String?
  restaurantFormat  String?
  birthDate         String?
  socialLink        String?

  accounts Account[]
  sessions Session[]
  orders   Order[]
  cart     Cart?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
}

model Establishment {
  id          String  @id @default(uuid())
  name        String
  city        String
  address     String
  inviteCode  String? @unique

  ownerId String
  owner   User    @relation("OwnerToEstablishment", fields: [ownerId], references: [id])

  employees User[] @relation("EstablishmentEmployees")

  equipment  Equipment[]
  healthLogs HealthLog[]
  tempLogs   TemperatureLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- ХАССП МОДЕЛИ ---

model Equipment {
  id      String  @id @default(uuid())
  name    String
  type    String?
  zone    String? 
  minTemp Float   @default(0)
  maxTemp Float   @default(8)

  establishmentId String
  establishment   Establishment @relation(fields: [establishmentId], references: [id], onDelete: Cascade)

  tempLogs TemperatureLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([establishmentId])
}

model TemperatureLog {
  id    String   @id @default(uuid())
  date  DateTime @default(now())
  value String   // Изменено на String для удобства ввода из формы
  shift Int      @default(0) // 0 - Утро, 1 - Вечер

  userId String
  user   User   @relation(fields: [userId], references: [id])

  equipmentId String
  equipment   Equipment @relation(fields: [equipmentId], references: [id], onDelete: Cascade)

  establishmentId String
  establishment   Establishment @relation(fields: [establishmentId], references: [id], onDelete: Cascade)

  comment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([equipmentId, date, shift]) // Уникальный ключ для предотвращения дублей
  @@index([establishmentId])
  @@index([equipmentId])
  @@index([date])
}

model HealthLog {
  id   String   @id @default(uuid())
  date DateTime @default(now())

  inspectorId String
  inspector   User   @relation("ManagerHealthChecks", fields: [inspectorId], references: [id])

  employeeId String
  employee   User   @relation("EmployeeHealthEntries", fields: [employeeId], references: [id])

  establishmentId String
  establishment   Establishment @relation(fields: [establishmentId], references: [id], onDelete: Cascade)

  hasPustules     Boolean @default(false)
  hasInfections   Boolean @default(false)
  isFamilyHealthy Boolean @default(true)
  temperature     Float?

  comment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([establishmentId])
  @@index([date])
}

// --- МАРКЕТПЛЕЙС И КОНТЕНТ ---

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  badgeColor  String?   @default("indigo")
  products    Product[]
}

model ProductType {
  id           String    @id @default(uuid())
  name         String    @unique
  hasMaterials Boolean   @default(false)
  products     Product[]
}

model Tag {
  id       String    @id @default(uuid())
  name     String    @unique
  products Product[]
}

model Product {
  id                String  @id @default(uuid())
  title             String
  shortDescription  String?
  description       String  @db.Text
  price             Int

  published    Boolean @default(true)
  requirements Json?   @default("[]")

  typeId      String?
  productType ProductType? @relation(fields: [typeId], references: [id])
  tags        Tag[]
  materials   Material[]
  cartItems   CartItem[]
  orderItems  OrderItem[]

  badgeText  String?
  badgeColor String? @default("neutral")
  bgColor    String? @default("#F3F4F6")
  imageUrl   String? @db.Text
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  categoryId String?
  category   Category? @relation(fields: [categoryId], references: [id])
}

model Material {
  id        String   @id @default(uuid())
  name      String
  url       String
  size      Int?
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Order {
  id        String      @id @default(uuid())
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  status    OrderStatus @default(NEW)
  isPaid    Boolean     @default(false)
  amount    Int

  userEmail String?
  userId    String?
  user      User?        @relation(fields: [userId], references: [id])

  items OrderItem[]
}

model OrderItem {
  id      String @id @default(uuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  priceAtPurchase Int
  answers         Json?
}

model Cart {
  id        String     @id @default(uuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String  @id @default(uuid())
  cartId    String
  cart      Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  answers Json?

  createdAt DateTime @default(now())
  @@unique([cartId, productId])
}

model SubscriptionPlan {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?  @db.Text
  badgeText   String?
  features    String[]

  priceMonth  Int @default(0)
  price3Month Int @default(0)
  price6Month Int @default(0)
  priceYear   Int @default(0)

  canAccessMarketplace Boolean @default(true)
  canCreateOrders      Boolean @default(true)
  hasPrioritySupport   Boolean @default(false)
  hasAnalytics         Boolean @default(false)

  isActive Boolean @default(true)
  order    Int     @default(0)

  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  refresh_token_expires_in Int?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  @@unique([identifier, token])
}

model Banner {
  id        String   @id @default(uuid())
  slot      String   @unique
  title     String?
  imageUrl  String   @db.Text
  link      String?  @default("/")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id        String     @id @default(uuid())
  title     String
  href      String?
  order     Int        @default(0)
  isAdmin   Boolean    @default(false)
  isVisible Boolean    @default(true)

  parentId String?
  parent   MenuItem?  @relation("SubMenuItems", fields: [parentId], references: [id], onDelete: Cascade)
  children MenuItem[] @relation("SubMenuItems")

  createdAt DateTime @default(now())
}

model Direction {
  id           String   @id @default(uuid())
  title        String
  subtitle     String?
  description  String?  @db.Text
  href         String
  isComingSoon Boolean  @default(false)

  imageUrl String? @db.Text
  iconName String?

  badge       String? @default("Open")
  activeColor String? @default("shadow-indigo-500/20 text-indigo-600 border-indigo-100")
  bgColor     String? @default("#F8FAFC")

  order Int @default(0)

  isVisible Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}